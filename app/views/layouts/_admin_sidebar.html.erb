<div id="admin-header">
  <header class="main-header">
    <%= link_to admin_root_path, class: "logo" do %>
      <span class="logo-lg"><%= t :name_system %></span>
    <% end %>
    <nav class="navbar navbar-static-top" role="navigation">
      <ol class="breadcrumb pull-left">
        <%= render_breadcrumbs tag: :li, separator: "" %>
      </ol>
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to chats_path do %>
              <i class="fa fa-weixin" aria-hidden="true"></i>
              <%= t "chats.chat" %>
              <span class="label label-danger dropdown-label number-message"></span>
            <% end %>
          </li>
          <li>
            <a href="#" data-toggle="control-sidebar">
              <i class="fa fa-gears"></i>
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <aside class="control-sidebar control-sidebar-dark">
    <div class="user-profile-navbar">
      <div class="image-user-profile">
        <%= link_to admin_user_path(current_user) do %>
          <%= avatar_user_tag current_user, "img-circle", Settings.image_size_100 %>
        <% end %>
      </div>
      <div class="image-user-profile">
        <div>
          <%= link_to admin_user_path(current_user) do %>
            <p><%= current_user.name %><i class="fa fa-pencil"></i></p>
          <% end %>
        </div>
        <div id="dropdown-admin" >
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= @namespace.capitalize %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% current_user.role_type_avaiable.each do |role| %>
                <li class="dropdown text-color"><%= link_to role,
                  change_current_role_type_path(role), method: :patch %></li>
              <% end %>
            </ul>
          </li>
        </div>
      </div>
    </div>
      <ul class="sidebar-menu">
        <li>
          <%= link_to admin_courses_path do %>
            <i class="fa fa-calendar"></i><span><%= t "layouts.courses" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_subjects_path do %>
            <i class="fa fa-laptop"></i><span><%= t "layouts.subjects" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_users_path do %>
            <i class="fa fa-users" aria-hidden="true"></i>
            <span><%= t "layouts.users" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_projects_path do %>
            <i class="fa fa-server" aria-hidden="true"></i>
            <span><%= t "layouts.project_trainings" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_programs_path do %>
            <i class="fa fa-list-alt" aria-hidden="true"></i>
            <span><%= t "layouts.programs" %></span>
          <% end %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-graduation-cap" aria-hidden="true"></i>
            <span><%= t "layouts.evaluations" %></span>
            <i class="fa fa-angle-left pull-right"></i>
            </a>
            <%= render "layouts/side_panel",
              objects: Settings.object_evaluation %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-cogs" aria-hidden="true"></i>
            <span><%= t "layouts.system" %></span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <%= render "layouts/side_panel", objects: Settings.objects_system %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span><%= t "layouts.training_schedule" %></span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel">
            <li>
              <%= link_to admin_organization_charts_path do %>
                <span><%= t "layouts.organization_chart" %></span>
              <% end %>
            </li>
            <li>
              <%= link_to admin_training_managements_path do %>
                <span><%= t "layouts.training_management" %></span>
              <% end %>
            </li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-area-chart" aria-hidden="true"></i>
            <span><%= t "layouts.statistics" %></span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel">
            <% Settings.statistics.each do |type| %>
              <li>
                <%= link_to admin_statistics_page_path(type) do %>
                  <i class="fa fa-circle-o" aria-hidden="true"></i>
                  <span><%= t "statistics.titles.#{type}" %></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-book"></i><span><%= t "layouts.exams" %></span>
            <i class="fa fa-angle-left pull-right"></i>
          </a>
          <%= render "layouts/side_panel", objects: Settings.object_exam %>
          <ul class="treeview-menu">
            <li>
              <%= link_to admin_imports_path do %>
                <i class="fa fa-circle-o"></i>
                <%= t "import_data.import_questions" %>
              <% end %>
            </li>
          </ul>
        </li>
        <li>
          <%= link_to admin_feed_backs_path do %>
            <i class="fa fa-question" aria-hidden="true"></i>
            <span><%= t "feed_backs.title" %></span>
          <% end %>
        </li>
        <li class="li-logout">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-backward"></i>
            <span><%= t "staticpages.logout" %></span>
          <% end %>
        </li>
      </ul>
  </aside>
  <div class="control-sidebar-bg"></div>
</div>
