<div id="admin-header">

  <header class="main-header">
    <%= render "layouts/header_left" %>
    <nav class="navbar navbar-static-top" role="navigation">
      <%= render "layouts/header_middle" %>
      <%= render "layouts/header_right" %>
    </nav>
  </header>
  <div class="control-sidebar-bg"></div>

  <aside class="control-sidebar control-sidebar-dark">
    <%= render "layouts/profile_sidebar_menu" %>
    <ul class="sidebar-menu">
      <% if policy admin_subjects_path %>
        <li>
          <%= link_to admin_subjects_path do %>
            <i class="fa fa-laptop"></i><span><%= t "layouts.subjects" %></span>
          <% end %>
        </li>
      <% end %>
      <% if policy admin_projects_path %>
        <li>
          <%= link_to admin_projects_path do %>
            <i class="fa fa-server" aria-hidden="true"></i>
            <span><%= t "layouts.project_trainings" %></span>
          <% end %>
        </li>
      <% end %>
      <% if policy admin_programs_path %>
        <li>
          <%= link_to admin_programs_path do %>
            <i class="fa fa-list-alt" aria-hidden="true"></i>
            <span><%= t "layouts.programs" %></span>
          <% end %>
        </li>
      <% end %>

      <li id="systems-header" class="dropdown">
        <% if policy_with_multi_path Settings.objects_system %>
          <a href="javascript:void(0)">
            <i class="fa fa-cogs" aria-hidden="true"></i>
            <span><%= t "layouts.system" %></span>
            <i class="fa fa-angle-right pull-right"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel">
            <%= render "layouts/side_panel", objects: Settings.objects_system %>
          </ul>
        <% end %>
      </li>

      <li class="dropdown">
        <% if policy_none_model Settings.imports %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-file"></i><span><%= t "layouts.imports" %></span>
            <i class="fa fa-angle-right pull-right"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel">
            <% if policy admin_imports_path %>
              <li>
                <%= link_to admin_imports_path do %>
                  <%= t "imports.imports" %>
                <% end %>
              </li>
            <% end %>
            <% if policy admin_synchronizes_path %>
              <li>
                <%= link_to admin_synchronizes_path do %>
                  <%= t "imports.synchronizes" %>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </li>

      <% if policy admin_posts_path %>
        <li>
          <%= link_to admin_posts_path do %>
            <i class="fa fa-question-circle" aria-hidden="true"></i>
            <span><%= t "posts.name_sidebar" %></span>
          <% end %>
        </li>
      <% end %>

      <% if policy admin_feed_backs_path %>
        <li>
          <%= link_to admin_feed_backs_path do %>
            <i class="fa fa-question" aria-hidden="true"></i>
            <span><%= t "feed_backs.title" %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </aside>
</div>
