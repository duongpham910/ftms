<div id="chat-header">
  <header class="main-header">
    <a href="/" class="logo-chat">
    <span class="logo-lg"><%= t :name_system %></span></a>
    <nav class="navbar-chat navbar-static-top" role="navigation">
      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= avatar_user_tag current_user, "user-image", Settings.image_size_50 %>
              <span class="hidden-xs"><%= current_user.name %></span>
            </a>
            <ul class="dropdown-menu">
              <li class="user-header">
                <%= avatar_user_tag current_user, "img-circle", Settings.image_size_50 %>
                <p><%= current_user.name %></p>
                <div class="col-xs-4 col-xs-offset-4">
                  <div class="switch-role">
                    <button class="btn btn-warning">
                      <%= @namespace.capitalize %>
                      <span class="caret"></span>
                    </button>
                    <ul hidden class="drop">
                      <%= current_user.decorate.set_link_role %>
                    </ul>
                  </div>
                </div>
              </li>
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to t("staticpages.profile"),
                    current_user.is_trainee? ? current_user : [:admin, current_user],
                    class: "btn btn-default btn-flat" %>
                </div>
                <div class="pull-right">
                  <%= link_to t("staticpages.logout"), destroy_user_session_path,
                    method: :delete, class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <aside class="main-sidebar-chat">
    <section class="sidebar" id="chat-sidebar">
      <div class="center row" id="search-chat-room">
        <%= text_field_tag :q, nil,
          class: "form-control search-chat-room", autocomplete: "off",
          placeholder: t("chats.search") %>
      </div>
      <ul class="sidebar-menu">
        <%= render "shared/chat_rooms" %>
      </ul>
    </section>
  </aside>
</div>
