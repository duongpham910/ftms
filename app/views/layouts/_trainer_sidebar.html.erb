<div id="trainer-header">
  <header class="main-header">

    <%= render "layouts/header_left" %>
    <nav class="navbar navbar-static-top" role="navigation">
      <%= render "layouts/header_middle" %>
      <%= render "layouts/header_right" %>
    </nav>
  </header>
  <div class="control-sidebar-bg"></div>

  <aside class="control-sidebar control-sidebar-dark">
    <%= render "layouts/profile_sidebar_menu" %>

    <ul class="sidebar-menu">
      <% if policy trainer_subjects_path %>
        <li>
          <%= link_to trainer_subjects_path do %>
            <i class="fa fa-laptop"></i><span><%= t "layouts.subjects" %></span>
          <% end %>
        </li>
      <% end %>

      <li class="dropdown">
        <% if policy_with_multi_path Settings.object_system %>
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-cogs" aria-hidden="true"></i>
            <span><%= t "layouts.system" %></span>
            <i class="fa fa-angle-right pull-right"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dLabel">
            <%= render "layouts/side_panel", objects: Settings.object_system %>
          </ul>
        <% end %>
      </li>

      <% if policy trainer_feed_backs_path %>
        <li>
          <%= link_to trainer_feed_backs_path do %>
            <i class="fa fa-question" aria-hidden="true"></i>
            <span><%= t "feed_backs.title" %></span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </aside>
</div>
