<div id="chat-body">
  <div id="chat-content">
    <div id="infinite-scrolling">
      <div hidden class="loading">
        <i class="fa fa-spinner fa-pulse fa-2x fa-fw"></i>
        <span class="sr-only"><%= t "chats.loading" %></span>
      </div>
      <div hidden class="message-paginate"></div>
    </div>

    <ul class="messages-list"></ul>

    <div class="chat-form" id="chat-formarea">
      <div id="chat-form-header" class="chat-content-toolbar">
        <div class="chat-content-toolbar-right">
          <input type="checkbox" name="autosend" value="on" id="chat-enter-send">
          <label class="entersend" for="chat-enter-send"><%= t "chats.enter_send" %></label>
          <div id="send-button" class="btn btn-primary btn-send">
            <%= t "buttons.send" %>
          </div>

          <div id="cancel-button" class="btn btn-default btn-send">
            <%= t "buttons.cancel" %>
          </div>
          <div id="button-save" class="btn btn-primary btn-send">
            <%= t "buttons.save" %>
          </div>

        </div>
      </div>
      <div id="chat-area" class="chat-area">
        <textarea id="chat-textarea" rows="4"></textarea>
      </div>
    </div>
  </div>
</div>
