<div class="box box-primary">
  <div class="box-body box-profile">
    <div align="center">
      <%= avatar_user_pdf @user,
        "img-profile img-custom"  ,
        Settings.image_profile %>
    </div>
    <h3 class="profile-username text-center">
      <%= @user.name %>
    </h3>
  </div>
</div>
<div class="box box-primary">
  <div class="box-body">
    <strong class="icon-profile">
      <i class="fa fa-book margin-r-5"></i>
      <%= t "user.profile.university" %>
    </strong>
    <p class="text-muted">
      <%= @user.profile.university.name if @user.profile.university.present? %>
    </p>
    <hr>
    <strong class="icon-profile">
      <i class="fa fa-envelope margin-r-5"></i>
      <%= t "user.profile.email" %>
    </strong>
    <p class="text-muted">
      <%= @user.email if @user.email.present? %>
    </p>
    <hr>
    <strong class="icon-profile">
      <i class="fa fa-map-marker margin-r-5"></i>
      <%=  t "user.profile.location" %>
    </strong>
    <p class="text-muted"><%= @user.profile.location.name if @user.profile
      .location.present? %></p>
    <hr>
    <strong class="icon-profile">
      <i class="fa fa-file-text-o margin-r-5"></i>
      <%= t "user.profile.note" %>
    </strong>
    <p><%= t "user.profile.description" %></p>
  </div>
</div>
