<div class="row document-field">
  <div class="col-md-6">
    <%= f.text_field :title, placeholder: t("courses.document_name"),
      class: "form-control" %>
  </div>
  <div class="col-md-5">
    <%= link_to f.object.title, f.object.document_link.url, target: "_blank" %>
    <%= f.file_field :document_link %><br>
  </div>
  <div class="col-md-1">
    <%= f.hidden_field :_destroy %>
    <%= link_to "#", class: "remove_fields" do %>
      <i class="fa fa-times" aria-hidden="true"></i>
    <% end %>
  </div>
  <div class="col-md-10">
    <%= f.text_area :description, class: "form-control", placeholder: t("document.description") %>
  </div>
</div>
<hr>
