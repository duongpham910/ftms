<div class="trainee-structure">
  <%= link_to [:trainer, user], title: user.name do %>
    <div class="profile-structure">
      <div class="avatar">
        <%= avatar_user_tag user, "img-circle",
          Settings.image_size_40 %></div>
      <div style="color: <%= user.profile.trainee_type.color if
        user.profile.trainee_type %>">
        <strong><%= t "organization_charts.trainee" %></strong><br>
        <%= user.name %>
      </div>
    </div>
  <% end %>
</div>
