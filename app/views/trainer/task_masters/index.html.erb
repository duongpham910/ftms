<div id="admin-subject-show">
  <div class="row">
    <div class="col-md-2">
      <%= set_image @subject %>
    </div>
    <div class="col-md-8">
      <h2 class="subject-name"><%= @subject.name %></h2>
      <div class="description"><%= @subject.description %></div>
      <p class="working-days">
        <%= "#{t "subjects.fields.during_time"}:
          #{@subject.during_time} #{t "subjects.fields.days"}" %>
      </p>
      <p class="documents"><%= t("subjects.documents") %>&nbsp;
        <% @subject.documents.each do |doc| %>
          <%= link_to doc.name, doc.content.url, target: "_blank" %>&nbsp;
        <% end %>
      </p>
    </div>
    <% if policy(edit_trainer_subject_path @subject) ||
      policy_with_method(url: trainer_subject_path(@subject), action: "destroy") %>
      <div class="col-md-2">
        <div class="dropdown pull-right">
          <button id="dLabel" type="button" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false"
            class="btn btn-default">
            <span class="glyphicon glyphicon-align-justify"
              aria-hidden="true"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right"
              aria-labelledby="dLabel">
              <% if policy edit_trainer_subject_path @subject %>
                <li>
                  <%= link_to edit_trainer_subject_path @subject do %>
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    <%= t "buttons.edit" %>
                  <% end %>
                </li>
              <% end %>
              <% if policy_with_method url: trainer_subject_path(@subject),
                action: "destroy" %>
                <li>
                  <%= link_to trainer_subject_path(@subject), method: :delete,
                    data: {confirm: t("messages.delete.confirm")} do %>
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    <%= t "buttons.delete" %>
                  <% end %>
                </li>
              <% end %>
            </ul>
        </div>
      </div>
    <% end %>
  </div>
  <div class="content-subject"><%= @subject.content.html_safe if @subject.content %></div>
  <div id="tasks">
    <table class="table table-striped tbl-task">
      <thead>
        <tr>
          <th class="name"><%= t "tasks.fields.name" %></th>
          <th class="description"><%= t "tasks.fields.description" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @task_masters %>
      </tbody>
    </table>
  </div>
</div>
