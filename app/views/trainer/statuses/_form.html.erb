<%= form_for [:trainer, @status] do |f| %>
  <div class="row">
    <div class="col-md-8">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="col-md-2 status-action">
      <%= f.submit (f.object.new_record? ? t("buttons.create")
        : t("buttons.update")), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
