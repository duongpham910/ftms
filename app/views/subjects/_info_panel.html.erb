<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="label box-title">
      <%= t "subjects.members" %>
      <span class="badge label-primary"><%= @subject_supports.member_size %></span>
    </h3>
    <% if @subject_supports.project %>
      <%= button_tag class: "btn btn-success pull-right",
        data: {toggle: "modal", target: "#user-course-project-modal"},
        title: t("projects.label.projects") do %>
        <i class="fa fa-tasks"></i>
      <% end %>
    <% end %>

  </div>
  <div class="box-body no-padding">
    <%= render "shared/member_panel", show_members: @subject_supports.users,
      count_member: @subject_supports.count_member %>
  </div>
</div>

<div class="card">
  <div id="image-course">
    <%= set_image @subject_supports.user_subject, Settings.image_size_200 %>
  </div><br>
  <div class="task-infor">
    <%= render "task_statistic" %>
  </div>
</div>

<div class="sector-content">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="label box-title"><%= t "subjects.note" %></h3>
    </div>
    <div class="box-body">
      <div class="subject-note">
        <p><%= t "subjects.note_during_time", during_time: @subject.during_time %></p>
      </div>
    </div>
  </div>
</div>
<%= render partial: "shared/documents", locals: {documents: @subject.documents} %>
