<div id="user-course-project-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="panel panel-info">
      <div class="panel-heading">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <% if project %>
          <h3 class="label-modal"><%= project.name %></h3>
          <small>
            <%= t "projects.requirements.total" %>
            <%= pluralize @subject_supports.course_subject_requirements.size,
              t("projects.requirements.requirement") %>
          </small>
        <% end %>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% if project && @subject_supports.course_subject_requirements.any? %>
            <% @subject_supports.course_subject_requirements.each.with_index 1 do
              |requirement, index| %>
              <div class="list-group-item">
                <%= "#{index}. #{requirement.project_requirement.name}" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
