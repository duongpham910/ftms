<div id="evaluation-standard-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content col-md-12">
      <%= form_for [@namespace.to_sym, @evaluation_standard] do |f| %>
        <div class="modal-header text-center"><b>
          <%= f.object.new_record? ? t("buttons.new") : t("buttons.edit") %>
        </b></div>
        <%= render "shared/error_messages", object: @evaluation_standard %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :min_point %>
          <%= f.number_field :min_point, min: Settings.evaluations.min,
            class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :max_point %>
          <%= f.number_field :max_point, min: Settings.evaluations.min,
            class: "form-control" %>
        </div>
        <div class="pull-right modal-footer">
          <button type="button" class="btn btn-secondary pull-right"
            data-dismiss="modal">
            <%= t "buttons.close" %></button>
          <%= f.submit f.object.new_record? ? t("buttons.new") :
            t("buttons.update"), title: t("buttons.create"),
            class: "btn btn-primary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
