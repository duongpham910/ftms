<div class="fixedTitle">
  <div class="tbody">
    <div class="trow header">
      <div class="tcell stt">#</div>
      <div class="tcell staff_code title">
        <%= t "training_managements.headers.staff_code" %>
        <%= link_to filter_datas_path(type: :staff_code, filter_type: :statistics),
          remote: true,
          class: "open-select",
          data: {name: "f-staff_code"} do %>
          <i class="fa ic ic-filter staff_code"></i>
        <% end %>
      </div>
      <div class="tcell trainee_name title">
        <%= t "training_managements.headers.trainee_name" %>
        <%= link_to filter_datas_path(type: :trainee_name, filter_type: :statistics),
          remote: true,
          class: "open-select",
          data: {name: "f-trainee_name"} do %>
          <i class="fa ic ic-filter trainee_name"></i>
        <% end %>
      </div>
      
      <div class="clear-both">
        <div class="side-bar">
        </div>
      </div>
    </div>
  </div>
</div>

