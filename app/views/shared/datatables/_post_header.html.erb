<div class="fixedTitle">
  <div class="tbody">
    <div class="trow header">
      <div class="tcell stt">#</div>
      <div class="tcell trainee_name title">
        <%= t "posts.user_post" %>
        <%= link_to filter_datas_path(type: :trainee_name, filter_type: :posts),
          remote: true, class: "open-select", data: {name: "f-trainee_name"} do %>
          <i class="fa ic ic-filter trainee_name"></i>
        <% end %>
      </div>
      <div class="tcell post_title title">
        <%= t "posts.title_post" %>
        <%= link_to filter_datas_path(type: :post_title, filter_type: :posts),
          remote: true, class: "open-select", data: {name: "f-post_title"} do %>
          <i class="fa ic ic-filter post_title"></i>
        <% end %>
      </div>
      <div class="clear-both">
        <div class="side-bar">
        </div>
      </div>
    </div>
  </div>
</div>

<header class="fixedTable-header">
  <div id="table-header" class="scroll-table">
    <div class="tbody">
      <div class="trow header">
        <div class="tcell post_content title">
          <%= t "posts.content_post" %>
          <%= link_to filter_datas_path(type: :post_content, filter_type: :posts),
            remote: true, class: "open-select", data: {name: "f-post_content"} do %>
            <i class="fa ic ic-filter post_content"></i>
          <% end %>
        </div>
        <div class="tcell post_date title">
          <%= t "posts.create_time_post" %>
        </div>
        <div class="tcell tag title">
          <%= t "posts.tag" %>
        </div>
      </div>
    </div>
  </div>
</header>
