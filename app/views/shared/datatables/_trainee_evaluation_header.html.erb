<div class="fixedTitle">
  <div class="tbody">
    <div class="trow header">
      <div class="tcell stt">#</div>
      <div class="tcell name display_name title">
        <%= t "trainee_evaluations.trainee_name" %>
        <%= link_to filter_datas_path(type: :trainee_name,
          filter_type: :trainee_evaluations), remote: true,
          class: "open-select", data: {name: "f-trainee_name"} do %>
          <i class="fa ic ic-filter trainee_name"></i>
        <% end %>
      </div>
      <div class="clear-both">
        <div class="side-bar">
        </div>
      </div>
    </div>
  </div>
</div>

