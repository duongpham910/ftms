<div class="row">
  <div class="col-md-12">
    <table id="tbl-assign-user" class="table table-hover">
      <thead>
        <th class="assign-checkbox"></th>
        <th><%= t "courses.users.name" %></th>
        <th><%= t "courses.users.email" %></th>
        <th><%= t "layouts.subjects" %>
        <th><%= t "layouts.courses" %>
      </thead>
      <tbody>
        <%= render partial: "shared/assign_user_group_row", collection: users,
          as: :user, locals: {f: f, group_users: group_users} %>
      </tbody>
    </table>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-1 col-md-offset-11">
    <%= f.submit t("buttons.#{action}"),
      class: "btn btn-primary pull-right" %>
  </div>
</div>
