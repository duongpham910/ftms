<%= form_for [post, comment], remote: true do |f| %>
  <%= render "shared/error_messages", object: comment %>
  <%= f.hidden_field :parent_id %>
  <div class="form-group">
    <%= f.text_area :content, class: "answer_content form-control" %>
  </div>
  <%= f.submit (f.object.new_record? ? btn_new_text :
    t("buttons.save")), class: "btn btn-primary text-right" %>
<% end %>
