<li class="message-content" id="message-<%= message.id %>"
  data-user-id="<%= message.user_id %>">
  <div class="media">
    <div class="media-left pull-left">
      <%= link_to avatar_user_tag(message.user, "img-circle", Settings
      .image_size_30), message.user, title: message.user.name %>
    </div>
    <div class="media-body">
      <div class="media-heading">
        <span><strong><%= link_to message.user_name, message.user %></strong></span>
        <span class="pull-right">
          <small><%= l message.created_at, format: :default %></small><br>
        </span>
      </div>
      <div class="chat-content">
        <%= message.content %>
      </div>
      <div class="message-actions">
        <% if message.is_owner? current_user.id %>
          <span class="message-option pull-right">
            <span class="button-edit" data-id="<%= message.id %>">
              <%= link_to "javascript:void(0)", class: "btn-edit" do %>
                <i class="glyphicon glyphicon-edit"></i>&nbsp;
                <%= t "button.edit" %>
              <% end %>
            </span> &nbsp; &nbsp;
            <span>
              <%= link_to message, method: :delete, class: "btn-delete",
                data: {confirm: t("messages.delete.confirm")}, remote: true do %>
                <i class="glyphicon glyphicon-trash"></i>&nbsp;
                <%= t "button.delete" %>
              <% end %>
            </span>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</li>
