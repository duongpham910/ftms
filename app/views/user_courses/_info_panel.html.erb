<div class="box box-primary">
  <div class="box-header with-border">
    <% t "calendars.tiny.label" %>
  </div>
  <div id="tiny-calendar">
    <div id="dialog"></div>
  </div>
</div>

<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="label box-title"><%= t "subjects.members" %></h3>
    <span class="badge label-primary">
      <%= @supports.member_size %>
    </span>
  </div>
  <div class="box-body">
    <%= render "shared/member_panel", show_members: @supports.users,
      count_member: @supports.count_member,
      trainers: trainers, trainees: trainees %>
  </div>
</div>

<div class="box box-primary">
  <div class="box-header with-border">
    <div class="course-infor">
      <% @supports.user_subject_statuses.each do |key, value| %>
        <div class="status">
          <i class="fa fa-circle <%= set_color_status key %>"
            aria-hidden="true"></i> &nbsp;
          <%= t "subjects.#{key}_subjects" %>
          <%= @supports.send "number_of_user_subject_#{key}" %>/
          <%= @supports.number_of_user_subjects %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="sector-content">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="label box-title"><%= t "courses.note" %></h3>
  </div>
  <div class="box-body">
    <div class="subject-note">
      <%= t "courses.time", start_date: @supports.course
        .start_date, end_date: @supports.course.end_date %>
    </div>
  </div>
</div>
<%= render partial: "shared/documents",
  locals: {documents: @supports.course.documents} %>
