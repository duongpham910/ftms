<%= form_for [:admin, @university] do |f| %>
  <div>
    <%= render "shared/error_messages", object: @university %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %><br>
    </div>
    <div class="form-group">
      <%= f.label :abbreviation %>
      <%= f.text_field :abbreviation, class: "form-control" %><br>
    </div>
    <div class="form-group pull-right">
      <%= f.submit (f.object.new_record? ? t("buttons.create")
        : t("buttons.update")), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
