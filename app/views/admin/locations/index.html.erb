<div id="list-locations" class="row systems-active">
  <div class="col-md-12">
    <% if policy(controller: "locations", action: "new") %>
      <div class="title">
        <span class="pull-right">
          <%= link_to t("buttons.new"),
            new_admin_location_path, class: "btn btn-success pull-right" %>
        </span>
      </div>
    <% end %>

    <table id="tbl-location" class="table table-bordered"
      data-source="<%= admin_locations_url format: "json" %>">
      <thead>
        <tr class="active">
          <th></th>
          <th><%= t "locations.name" %></th>
          <th><%= t "locations.manager" %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>

