<div>
  <%= form_for [:admin, @location] do |f| %>
    <%= render "shared/error_messages", object: @location %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true,
        placeholder: t("locations.form.input_location_name") %>
    </div>
    <div class="form-group">
      <%= f.label :user_id %>
      <%= f.select :user_id, @managers.collect{|u| [u.name, u.id]}, {},
        {selected: f.object.user_id, class: "form-control"} %>
    </div>
    <br />
    <div class="form-group pull-right">
      <%= f.submit (f.object.new_record? ? t("buttons.create")
        : t("buttons.save")), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

