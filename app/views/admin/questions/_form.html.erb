<%= form_for [:admin, @question] do |f| %>
  <%= render "shared/error_messages", object: @question %>
  <div class="form-group">
    <%= f.label :subject %>
    <%= f.collection_select :subject_id, @supports.subjects, :id, :name,
      {include_blank: false}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :level %>
    <%= f.select :level, options_for_select(@supports.levels, @question.level), {},
      class: "form-control" %>
  </div>

  <div class="col-sm-10 col-sm-offset-1">
    <h3><%= f.label :answer %></h3>
    <%= f.fields_for :answers do |builder| %>
      <%= render "answer_fields", f: builder %>
    <% end %>
    <strong><%= link_to_add_fields t("questions.add_answer"),
      f, :answers %></strong>
    <% if f.object.new_record? %>
      <%= f.submit t("buttons.create_and_continue"),
        name: "create_and_continue",
        class: "btn btn-primary pull-right btn-create-and-continue" %>
      <%= f.submit t("buttons.create"),
        class: "btn btn-primary pull-right" %>
    <% else %>
      <%= f.submit t("buttons.save"),
        class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
<% end %>
