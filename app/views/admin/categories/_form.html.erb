<div class="modal-content">
  <%= form_for [:admin, form_object], remote: true do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title">
        <%= f.object.new_record? ? t("buttons.new") : t("buttons.edit") %>
      </h4>
    </div>
    <div class="modal-body">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :language %>
        <%= f.select :language_id, @supports.languages, {prompt: true},
          {selected: f.object.language_id, class: "form-control"} %>
      </div>
      <div class="form_errors">
        <%= render "shared/error_messages", object: f.object %>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit t("buttons.save"), class: "btn btn-primary" %>
      <%= button_tag t("buttons.close"), class: "btn btn-default",
        data: {dismiss: "modal"} %>
    </div>
  <% end %>
</div>
