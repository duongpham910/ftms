<div id="update_project" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="label-modal"><%= t "projects.assign_project" %></h4>
      </div>
      <%= form_for [:admin, @supports.course_subject],
        url: admin_course_subject_assign_project_path(@supports.course_subject),
        method: :patch, remote: true, class: "form-control" do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= select_profile_field :project, @supports.projects, f %>
          </div>
          <div id="loading-project"></div>
          <div id="sA-requirements">
            <span class="state-icon glyphicon glyphicon-unchecked"></span>
            <input type="checkbox" class="hidden" id="s_All_rqm" />
            <%= t "select_all" %>
          </div>
          <div id="list-requirements">
            <div id="list-rqms" class="list-group checked-list-box">
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit t("buttons.save"), class: "btn btn-primary",
            id: "subject-requirements-submit" %>
          <button type="button" class="btn btn-danger" data-dismiss="modal">
            <%= t "buttons.cancel" %>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
