<div>
  <table class="table table-striped tbl-language">
    <thead>
      <tr>
        <th class="name"><%= t "table.thead.name" %></th>
        <th class="action"><%= t "table.thread.action" %></th>
        <th>
          <% if policy(controller: "stages", action: "new") %>
            <%= link_to t("buttons.new"), new_admin_stage_path,
              class: "btn btn-success pull-right" %>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @stages.each do |stage| %>
        <tr>
          <td class="name"><%= stage.name %></td>
          <td class="action">
            <% if policy(controller: "stages", action: "edit") %>
              <%= link_to t("buttons.edit"), edit_admin_stage_path(stage) %>&nbsp;
            <% end %>
            <% if policy(controller: "stages", action: "destroy") %>
              <%= link_to t("buttons.delete"), admin_stage_path(stage),
                method: :delete, data: {confirm: t("messages.delete.confirm")} %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
