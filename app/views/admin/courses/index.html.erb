<div id="main" class="clearfix">
  <div id="content">
    <div id="<%= controller_name %>">
      <%= link_to t("buttons.new"),
        new_admin_course_path, class: "btn btn-success pull-right" %>
      <%= image_tag "loading.svg", id: "loading" %>
      <h3 class="title">
        <button id="btn-filter-on-off" title="<%= filter_title %>"
          class="btn-filter-onoff-project btn btn-default">
          &nbsp;
        </button>
        <span id="filter-loading" class="filter-loading-offset-top"></span>
      </h3>

      <div class="table">
        <%= render "shared/datatables/course_header" %>
        <%= @supports.course_presenters.html_safe %>
      </div>

      <div class="pull-right" id="number-records">
        <%= i18n_pluralize @supports.courses.size, Settings.record %>
      </div>

      <div id="filter" data-filter-data="<%= @supports.filter_data_user %>"
        data-type="<%= :courses %>" data-id="<%= current_user.id %>"
        data-is-turn-on="<%= @filter_service.is_on? %>">
      </div>

      <div class="list-filters">
        <div class="filter-form">
        </div>
      </div>
    </div>
  </div>
</div>
