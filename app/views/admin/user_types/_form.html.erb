<%= form_for [:admin, @user_type] do |f| %>
  <div>
    <%= render "shared/error_messages", object: @user_type %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", required: true %><br>
    </div>
    <div class="form-group">
      <%= f.submit (f.object.new_record? ? t("buttons.create")
        : t("buttons.update")), class: "btn btn-primary col-md-6
        col-md-offset-3" %>
    </div>
  </div>
<% end %>
