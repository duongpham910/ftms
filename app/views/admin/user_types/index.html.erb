<div id="types" class="systems-active">
  <p class="pull-right">
    <% if policy(controller: "user_types", action: "new") %>
      <%= link_to t("buttons.new"),
        new_admin_user_type_path, class: "btn btn-success" %>
    <% end %>
  </p>
  <table class="table table-striped tbl-type">
    <thead>
      <tr>
        <th class="name"><%= t "table.thead.name" %></th>
        <th class="action"><%= t "table.thread.action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @user_types.each do |user_type| %>
        <tr>
          <td class="name"><%= user_type.name %></td>
          <% if policy(controller: "user_types", action: "edit") %>
            <td class="action">
              <%= link_to t("buttons.edit"), edit_admin_user_type_path(user_type),
                class: "text-primary" %> &nbsp;
            </td>
          <% end %>
          <% if policy(controller: "user_types", action: "destroy") %>
            <td>
              <%= link_to t("buttons.delete"), admin_user_type_path(user_type),
                method: :delete, data: {confirm: t("messages.delete.confirm")},
                class: "text-danger" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
