            remote: true,
            class: "open-select",
            data: {name: "f-category"} do %>
            <i class="fa ic ic-filter category"></i>
          <% end %>
        </div>
        <div class="tcell location groups_id title">
          <%= t "training_managements.headers.location" %>
          <%= link_to admin_filter_datas_path(type: :divisions, filter_type: :evaluations),
            remote: true,
            class: "open-select",
            data: {name: "f-divisions"} do %>
            <i class="fa ic ic-filter toggle-button-division divisions"></i>
          <% end %>
        </div>
        <div class="tcell status title">
          <%= t "training_managements.headers.status" %>
          <%= link_to admin_filter_datas_path(type: :join_date, filter_type: :evaluations),
            remote: true,
            class: "open-select",
            data: {name: "f-join_date"} do %>
            <i class="fa ic ic-filter join_date"></i>
          <% end %>
        </div>
