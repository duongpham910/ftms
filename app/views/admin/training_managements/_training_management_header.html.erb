<div class="fixedTitle">
  <div class="tbody">
    <div class="trow header">
      <div class="tcell stt">#</div>
      <div class="tcell name display_name title">
        <%= t "training_managements.headers.trainee_name" %>
        <%= link_to admin_filter_datas_path(type: :employee_name, filter_type: :evaluations),
          remote: true,
          class: "open-select",
          data: {name: "f-employee_name"} do %>
          <i class="fa ic ic-filter employee_name"></i>
        <% end %>
      </div>
      <div class="clear-both">
        <div class="side-bar">
        </div>
      </div>
    </div>
  </div>
</div>

<header class="fixedTable-header">
  <div id="table-header" class="scroll-table">
    <div class="tbody">
      <div class="trow header">
        <div class="tcell trainee_type category_name title">
          <%= t "training_managements.headers.trainee_type" %>
