<div id="statuses" class="systems-active">
  <p class="pull-right">
    <% if policy(controller: "statuses", action: "new") %>
      <%= link_to t("buttons.new"), new_admin_status_path, class: "btn btn-success" %>
    <% end %>
  </p>

  <table class="table table-striped tbl-status">
    <thead>
      <th class="index"><%= t "statuses.table.index" %></th>
      <th class="name"><%= t "statuses.table.name" %></th>
      <th class="action"><%= t "statuses.table.action" %></th>
    </thead>
    <tbody>
      <% unless @statuses.nil? %>
        <% @statuses.each_with_index do |status, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= status.name %></td>
            <% if policy(controller: "statuses", action: "edit") %>
              <td class="action">
                <%= link_to t("buttons.edit"), edit_admin_status_path(status),
                  class: "text-primary" %> &nbsp;
              </td>
            <% end %>
            <% if policy(controller: "statuses", action: "destroy") %>
              <td>
                <%= link_to t("buttons.delete"), admin_status_path(status),
                  method: :delete, data: {confirm: t("messages.delete.confirm")},
                  class: "text-danger" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
