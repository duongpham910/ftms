<div class="fixedTitle">
  <div class="tbody">
    <div class="trow header">
      <div class="tcell stt">#</div>
      <div class="tcell trainee_type title">
        <%= t "statistics.total_trainees.headers.trainee_type" %>
        <%= link_to filter_datas_path(type: :trainee_type, filter_type: :total_trainees),
          remote: true,
          class: "open-select",
          data: {name: "f-trainee_type"} do %>
          <i class="fa ic ic-filter trainee_type"></i>
        <% end %>
      </div>
      <div class="tcell programming_language title">
        <%= t "statistics.total_trainees.headers.language" %>
        <%= link_to filter_datas_path(type: :programming_language, filter_type: :total_trainees),
          remote: true,
          class: "open-select",
          data: {name: "f-programming_language"} do %>
          <i class="fa ic ic-filter programming_language"></i>
        <% end %>
      </div>
      <div class="clear-both">
        <div class="side-bar">
        </div>
      </div>
    </div>
  </div>
</div>

<header class="fixedTable-header">
  <div id="table-header" class="scroll-table">
    <div class="tbody">
      <div class="trow header">
        <% if @statistics.month_ranges.any? %>
          <div class="clear-both all-months">
            <div class="month">
              <%= t "statistics.total_trainees.headers.months" %>
            </div>

            <% @statistics.month_ranges.each do |month| %>
              <div class="tcell total-trainees-month-<%= month.gsub('/', '-') %> trainee-by-month title"
                data-month="<%= month.gsub('/', '-') %>">
                <%= month %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
