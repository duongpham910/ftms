<div id="statistics">
  <div class="<%= params[:type] %>">
    <div class="box box-success">
      <div class="box-header with-border">
        <h3 class="box-title">
          <%= t "statistics.universities.title" %>
        </h3>

        <div class="box-tools pull-right">
          <button type="button" class="btn btn-box-tool" data-widget="collapse">
            <i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove">
            <i class="fa fa-times"></i>
          </button>
        </div>
      </div>

      <div class="box-body">
        <div class="col-md-3 universities_filter_form">
          <div class="row">
            <%= render "universities_filter" %>
          </div>
        </div>
        <div class="col-md-9">
          <div id="universities-statistic"
            data-universities="<%= @statistics.universities %>">
          </div>
        </div>
      </div>
    </div>

    <%= render "table_statistic_below_chart", type: "university" %>
  </div>
</div>
