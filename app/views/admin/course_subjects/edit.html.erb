<div class="row">
  <div class="col-md-12">
    <div class="title">
      <span>
        <%= @course_subject.subject_name %>
        <%= link_to t("subjects.task.new_task"), new_admin_course_subject_task_path(@course_subject.id),
          class: "btn btn-success pull-right" %>
      </span>
    </div>
    <%= form_for @course_subject, url: admin_course_course_subject_path,
      method: :patch do |f| %>
      <div class="row">
        <%= render "shared/error_messages", object: @course_subject %>
      </div>

      <div class="col-md-12">
        <div class="row">
          <div class="col-md-2 text-right">
            <span><%= t "subjects.fields.name" %>:</span>
          </div>
          <div class="col-md-9">
            <%= f.text_field :subject_name, class: "form-control", required: true,
              placeholder: t("subjects.form.input_subject_name") %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-2 text-right">
            <span><%= t "subjects.chatwork_id" %></span>
          </div>
          <div class="col-md-9">
            <%= f.text_field :chatwork_room_id, class: "form-control",
              required: true,
              placeholder: t("subjects.form.input_chatwork_room_id") %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-2 text-right">
            <span><%= t "subjects.image" %>:</span>
          </div>
          <div class="col-md-9">
            <%= f.file_field :image, class: "form-control" %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-2 text-right">
            <span><%= t "subjects.description" %>:</span>
          </div>
          <div class="col-md-9">
            <%= f.text_area :subject_description, class: "form-control",
              placeholder: t("subjects.form.input_subject_description") %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-2 text-right">
            <span><%= t "subjects.content" %></span>
          </div>
          <div class="col-md-9">
            <%= f.text_area :subject_content, class: "ckeditor-field form-control" %>
          </div>
        </div>
        <br>
      </div>
      <div class="row">
        <div class="col-md-1 col-md-offset-10">
          <%= f.submit (f.object.new_record? ? t("buttons.create")
            : t("buttons.update")),
            class: "btn btn-primary text-right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
