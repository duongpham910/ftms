<%= form_tag posts_path, method: :get, class: "form-search" do %>
  <div class="input-group">
    <%= text_field_tag :title_or_content_or_tags_name_cont,
      params[:title_or_content_or_tags_name_cont], class: "form-control",
      placeholder: t("qna.index.search_placeholder"),
      autocomplete: "off" %>
    <span class="input-group-btn">
      <%= button_tag name: "", type: :submit, class: "btn btn-default" do %>
        <i class="fa fa-search"></i>
      <% end %>
    </span>
  </div>
<% end %>
