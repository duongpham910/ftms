<%= form_for @post do |f| %>
    <%= render "shared/error_messages", object: @post %>
    <div class="form-group">
      <%= f.label t("faq.form.title") %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("faq.form.content") %>
      <%= f.text_area :content, class: "ckeditor-field form-control" %>
    </div>
    <div class="form-group">
      <%= f.label t("faq.form.tags") %>
      <%= f.text_field :tag_list, value: @post.tag_list.join(", "),
        class: "form-control", placeholder: t("faq.form.tags_placeholder") %>
    </div>
    <%= f.submit (f.object.new_record? ? t("buttons.create")
      : t("buttons.save")), class: "btn btn-primary text-right" %>
<% end %>
