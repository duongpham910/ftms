<div class="row post">
  <div class="col-sm-2 col-xs-4 stats">
    <div class="wrapper">
      <div class="count"><%= post.comments.count %></div>
      <div>
        <%= t("faq.index.answer").pluralize post.comments.count %>
      </div>
      <div class="count"><%= post.views %></div>
      <div>
        <%= t("faq.index.view").pluralize post.views %>
      </div>
    </div>
  </div>
  <div class="col-sm-10 col-xs-8  summary">
    <h3 class="title"><%= link_to post.title, post %></h3>
    <div class="quote">
      <%= truncate sanitize(post.content),
        length: Settings.faq.truncated_characters %>
    </div>
    <div class="tags">
      <% post.tag_list.each do |tag| %>
        <%= link_to tag, tag_path(tag), class: "tag" %>
      <% end %>
    </div>
    <div class="create-time">
      <%= t "faq.index.time_ago",
        time: time_ago_in_words(post.created_at) %> -
      <%= link_to post.user_name, post.user %>
    </div>
  </div>
</div>
