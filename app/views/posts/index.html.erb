<% provide :title, t("faq.index.title") %>

<div id="faq">
  <div class="breadcrumb-bar">
    <ul class="list breadcrumb">
      <li>
        <%= link_to root_url do %>
          <i class="glyphicon glyphicon-th-list"></i>
          <%= t "layouts.paths" %>
        <% end %>
      </li>
      <li class="active"><%= t "faq.index.title" %></li>
    </ul>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="tabs">
        <div class="heading clearfix">
          <div class="pull-left">
            <%= link_to t("faq.new.title"), new_post_path,
              class: "btn btn-primary" %>
          </div>
          <ul class="nav nav-tabs main-tabs pull-right"
            data-selected-tab="<%= params[:tab] %>">
            <% %w(newest unanswered).each_with_index do |post_type, index| %>
              <li class="<%= 'active' if index == 0 %>">
                <a data-toggle="tab" href="#<%= post_type %>">
                  <%= t "faq.index.#{post_type}" %>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="tab-content">
        <% %w(newest unanswered).each_with_index do |post_type, index| %>
          <div id="<%= post_type %>"
            class="tab-pane fade <%= 'in active' if index == 0 %>">
            <%= render @supports.send "#{post_type}_posts" %>
            <% if @supports.send("#{post_type}_posts").any? %>
              <div class="row">
                <div class="col-md-12">
                  <%= paginate @supports.send("#{post_type}_posts"),
                    params: {tab: post_type} %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4 sidebar">
      <%= render "sidebar",
        parts: ["search", "most_viewed_posts", "popular_tags"] %>
    </div>
  </div>
</div>
