  <section id="programming-languages" class="scroll">
    <div class="container-fluid">
      <div class="row">
        <h2 class="title">
          <%= t "staticpages.programming_languages.title" %>
        </h2>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <% @supports.languages.each_with_index do |language, index| %>
          <% if index > 0 && index % 2 == 0 %>
            </div>
            <div class="row">
          <% end %>
          <div class="col-md-6">
            <div class="language clearfix">
              <div class="col-sm-3 language-image">
                <% if Rails.application.assets
                  .find_asset "languages/#{language.name.downcase}.png" %>
                  <%= image_tag "languages/#{language.name.downcase}.png" %>
                <% else %>
                  <%= image_tag "languages/default.png" %>
                <% end %>
              </div>
              <div class="col-sm-9 detail">
                <div class="row head">
                  <div class="col-xs-8 name">
                    <h3><%= language.name %></h3>
                  </div>
                  <div class="col-xs-4 statistic">
                    <p><%= pluralize language.profiles.count,
                        t("staticpages.programming_languages.trainee") %></p>
                    <p><%= pluralize language.courses.count,
                        t("staticpages.programming_languages.course") %></p>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-12 description">
                    <p>
                      <%= t "staticpages.programming_languages.#{language.name.downcase}_description" %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <section id="counters" class="scroll">
    <div class="container-fluid">
